  <includeBaseDirectory>true</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>src/main</directory>
      <outputDirectory>${file.separator}bin</outputDirectory>
      <fileMode>0755</fileMode>
      <includes>
        <include>*.sh</include>
        <include>*.bat</include>
        <include>*.exe</include>
        <include>*.dll</include>
